{% extends 'base.html.twig' %}

{% block title %}Mon compte - La Boutique Française {% endblock %}


{% block content %}
    <h1 class="text-center">Mon compte </h1>
    {% if is_granted ('ROLE_ADMIN') %}
        <small><a href="/admin">Vous êtes un administrateur, accédez au back-office ?</a></small><br>
    {% endif %}
    <p class="text-center">Bienvenue dans votre espace  {{ app.user.firstname | title }} {{ app.user.lastname | title }} !<br> 
    C'est dans cet espace que vous allez pouvoir gérer toutes vos informations personnelles</p>
    <hr> 
    <div class="row">
        <div class="col-md-4">
            <div class="account-item text-center">
            <img id="imgfluid" class="img-fluid mb-4" src="{{ asset('assets/img/padlock.png') }}" alt="modifier mon mot de passe"><br>
                    <a class="text-nowrap" href="{{ path('account_password') }}">Modifier mon mot de passe</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="account-item text-center">
                <img id="imgfluid" class="img-fluid mb-4" src="{{ asset('assets/img/location.png') }}" alt="gérer mes adresses"><br>
                - <a href="{{ path('account_address') }}">Gérer mes adresses</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="account-item text-center">
                <img id="imgfluid" class="img-fluid mb-4" src="{{ asset('assets/img/shopping.png') }}" alt="mes commandes"><br>
                - <a href="{{ path('account_order') }}">Mes commandes</a>
            </div>
        </div>
    </div>
{% endblock %}


